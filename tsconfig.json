{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["client/src", "server/src", "types"],
  "exclude": ["dist", "node_modules"]
}
